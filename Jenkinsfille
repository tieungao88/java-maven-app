pipeline {
    agent none
    stages {
        stage("build jar") {
            agent {
                docker { image 'maven:3.8.1-adoptopenjdk-11' }
            }
            steps {
                script {
                    echo "build jar ..."
                    // sh 'mvn package'
                    sh 'mvn --version'
                }
            }
        }
        stage("build image") {
            steps {
                script {
                    echo "build image ..."
                    withCredentials([usernamePassword(credentialsId: 'docker-hub-repo', passwordVariable: 'PASS', usernameVariable: 'USER')]) {
                        sh 'docker build -t tieungao1988/java-maven-app:2.1 .'
                        sh "echo $PASS | docker login -u $USER --password-stdin"
                        sh 'docker push tieungao1988/java-maven-app:2.1'
                    }
                }
            }
        }
        stage("deploy") {
            steps {
                script {
                    echo "deploy application ..."
                }
            }
        }
    }
}